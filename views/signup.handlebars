<div class="signupContainer">
	<div>
	<!-- show any messages that come back with authentication -->
            {{#if message.length}}
                <div class="alert alert-danger">{{message }}</div>
            {{/if}}

	<!-- LOGIN FORM -->
	<div class="textfields">
		<form action="/signup" method="post">
			<div class="form-group">
				<div class="foo">
					<label>Username</label>
				</div>
				<div class="bar">
					<input type="text" class="form-control" name="username">
				</div>
			</div>
			<div class="form-group">
				<div class="foo">
					<label>Password</label>
				</div>
				<div class="bar">
					<input type="password" class="form-control" name="password">
				</div>
			</div>
			<div class="form-group">
				<div class="foo">
					Name:
				</div>
				<div class="bar">
					<input type="text" class="form-control" name="name">
				</div>
			</div>
			<div class="form-group">
				<div class="foo">
					Biography:
				</div>
				<div class="bar">
					<textarea class="signup-bio" name="bio"></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="foo">
					Position:
				</div>
				<div class="bar">
					<input  type="checkbox" name="position" value="Catcher">Catcher
					<input  type="checkbox" name="position" value="Pitcher">Pitcher
					<input  type="checkbox" name="position" value="Outfield">Outfield
					<input  type="checkbox" name="position" value="Infield">Infield
				</div>
				<div class="foobar" >
					Gender: Male 
				</div>
					<input  type="radio" name="gender" value="Male"> 
				<div class="foobar">
					Gender: Female 
				</div>
					<input  type="radio" name="gender" value="Female"> 
					<br>
				<div class="foobar" >
					Birth Date: 
				</div>
					<input type="text" name="dob" id="datepicker"><br>
				<button type="submit" class="btn btn-warning btn-lg">Signup</button>
			</div>
		</form>
	</div>
	<div>
</div>
  <script>
  $(function() {
    $( "#datepicker" ).datepicker();
  });

  </script>

