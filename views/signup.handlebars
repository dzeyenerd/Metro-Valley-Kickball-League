
<div class="signupContainer">
	<div>
	<!-- show any messages that come back with authentication -->
            {{#if message.length}}
                <div class="alert alert-danger">{{message }}</div>
            {{/if}}

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label>Username</label>
			<input type="text" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>
			Bio:<br>
			<textarea name="bio">
			</textarea><br>
			Name:<input type="text" class="form-control" name="playername"><br>
			Position:
			<input  type="checkbox" name="position" value="Catcher">Catcher
			<input  type="checkbox" name="position" value="Pitcher">Pitcher
			<input  type="checkbox" name="position" value="Outfield">Outfield
			<input  type="checkbox" name="position" value="Infield">Infield
			<br>
			Gender: Male <input  type="radio" name="gender" value="Male"> 
			Gender: Female <input  type="radio" name="gender" value="Female"> 
			<br>
			Birth Date: <input type="text" name="dob" id="datepicker">

		<button type="submit" class="btn btn-warning btn-lg">Signup</button>
	</form>
	<div>
</div>
  <script>
  $(function() {
    $( "#datepicker" ).datepicker();
  });

  </script>

